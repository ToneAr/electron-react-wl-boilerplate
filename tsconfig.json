{
	"compilerOptions": {
		"incremental": true,
		"target": "es2022",
		"module": "commonjs",
		"lib": ["dom", "es2022"],
		"jsx": "react-jsx",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./out",
		"noImplicitAny": false,
		"paths": {
			"react": ["./node_modules/@types/react"]
		}
	},
	"references": [
		{ "path": "./tsconfig.node.json" },
		{ "path": "./tsconfig.web.json" }
	]
}
