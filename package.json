{
	"name": "electron-react-wl-boilerplate",
	"version": "2.0.0",
	"description": "Electron + React + TS + WL",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ToneAr/electron-react-wl-boilerplate"
	},
	"author": {
		"name": "Antonis Aristeidou",
		"email": "tonya@wolfram.com"
	},
	"contributors": [],
	"main": "out/app/main.js",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "yarn typecheck:node && yarn typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "yarn typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "yarn build && electron-builder --dir",
		"build:win": "yarn build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux"
	},
	"build": {
		"productName": "Electron + React + WL",
		"extraMetadata": {
			"version": "2.0.0"
		},
		"appId": "ElectronWLReact",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"files": [
			"node_modules",
			"package.json",
			"out/app"
		],
		"afterSign": ".misc/scripts/notarize.js",
		"mac": {
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			},
			"type": "distribution",
			"hardenedRuntime": true,
			"entitlements": "assets/entitlements.mac.plist",
			"entitlementsInherit": "assets/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		},
		"directories": {
			"buildResources": "assets",
			"output": "out/build"
		},
		"extraResources": [
			{
				"from": "assets/",
				"to": "app/assets/",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "wl/",
				"to": "app/wl/",
				"filter": [
					"**/*"
				]
			}
		],
		"extraFiles": [],
		"publish": {
			"provider": "github",
			"owner": "ToneAr",
			"repo": "electron-react-wl-boilerplate"
		}
	},
	"browserslist": [],
	"prettier": {
		"singleQuote": true,
		"overrides": [
			{
				"files": [
					".prettierrc",
					".eslintrc"
				],
				"options": {
					"parser": "json"
				}
			}
		]
	},
	"jest": {
		"moduleDirectories": [
			"node_modules",
			"out/app/node_modules",
			"src"
		],
		"moduleFileExtensions": [
			"js",
			"jsx",
			"ts",
			"tsx",
			"json"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.misc/mocks/fileMock.js",
			"\\.(css|less|sass|scss)$": "identity-obj-proxy"
		},
		"setupFiles": [],
		"testEnvironment": "jsdom",
		"testEnvironmentOptions": {
			"url": "http://localhost/"
		},
		"testPathIgnorePatterns": [
			"out/app/"
		],
		"transform": {
			"\\.(ts|tsx|js|jsx)$": "ts-jest"
		}
	},
	"devEngines": {
		"node": ">=14.x",
		"npm": ">=7.x"
	},
	"electronmon": {
		"patterns": [
			"!**/**",
			"src/main/**"
		],
		"logLevel": "quiet"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.5",
		"@mui/material": "^5.16.0",
		"axios": "^1.7.2",
		"electron-debug": "^3.2.0",
		"electron-log": "^5.2.0",
		"electron-updater": "^6.1.7",
		"qs": "^6.12.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.16.0"
	},
	"devDependencies": {
		"@electron-toolkit/eslint-config-prettier": "^2.0.0",
		"@electron-toolkit/eslint-config-ts": "^2.0.0",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron/notarize": "^2.1.0",
		"@testing-library/jest-dom": "^6.1.3",
		"@testing-library/react": "^14.0.0",
		"@types/jest": "^29.5.5",
		"@types/node": "^20.14.8",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@types/react-test-renderer": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@vitejs/plugin-react": "^4.3.1",
		"chalk": "^4.1.2",
		"concurrently": "^8.2.1",
		"core-js": "^3.32.2",
		"cross-env": "^7.0.3",
		"detect-port": "^1.5.1",
		"electron": "^31.5.0",
		"electron-builder": "^24.13.3",
		"electron-devtools-installer": "^3.2.0",
		"electron-packager": "^17.1.2",
		"electron-vite": "^2.3.0",
		"electronmon": "^2.0.2",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-erb": "^4.1.0-0",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-compat": "^4.2.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jest": "^27.4.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.34.3",
		"eslint-plugin-react-hooks": "^4.6.0",
		"file-loader": "^6.2.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"mini-css-extract-plugin": "^2.7.6",
		"prettier": "^3.3.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.16.0",
		"react-test-renderer": "^18.2.0",
		"rimraf": "^5.0.1",
		"sass": "^1.67.0",
		"sass-loader": "^13.3.2",
		"style-loader": "^3.3.3",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.0",
		"typescript": "^5.5.2",
		"url-loader": "^4.1.1",
		"vite": "^5.3.1",
		"vite-plugin-ejs": "^1.7.0",
		"vite-plugin-svgr": "^4.2.0",
		"vite-svg-loader": "^5.1.0"
	}
}
